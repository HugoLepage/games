---
import { Image } from 'astro:assets';
import H1 from "../components/h1.astro";
import InfoLayout from "../layouts/InfoLayout.astro";

import Scattergories from "../assets/scattergories.png";
import Codenames from "../assets/codenames.png";
import CodenamesPictures from "../assets/codenames-pictures.png";
import Boggle from "../assets/boggle.png";
import Boulette from "../assets/boulette.jpg";

import { Code } from 'astro:components';
import { link } from 'motion/react-client';

const projects = [
     {
          title: "Scattergories",
          description: "List as many words as you can that begin with a certain letter before time runs out.",
          image: Scattergories,
          link: "../scattergories"
     },
     {
          title: "Codenames",
          description: "Give your team clever one-word clues to help them spot their agents in the field.",
          image: Codenames,
          link: "../codenames"
     },
     {
          title: "Codenames Pictures",
          description: "Give your team one-word coded clues, trying to identify specific image cards.",
          image: CodenamesPictures
     },
     {
          title: "Boggle",
          description: "Can you find words no one else can see in the letter grid?",
          image: Boggle,
          link: "../boggle"
     },
     {
          title: "Boulette",
          description: "Three-round charades game: spoken, mimed, and single-word clues.",
          image: Boulette 

     }
     ];
---

<InfoLayout>
     <div class="p-4 sm:pt-8 sm:px-12 pb-20 min-h-dvh">
          <H1> Games</H1>

          <ul class="mt-4 sm:mt-12 grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-16 sm:gap-8">
               {projects.map((project) => (
                    <li>
                         <a href={project.link}>
                              <Image src={project.image} alt={project.title} class="aspect-[1/1] object-center object-cover rounded-lg shadow-lg mb-4 sm:mb-0 sm:mr-4" />
                         </a>
                         <div class="p-1 sm:p-2">
                              <h2 class="text-base text-zinc-100">{project.title}</h2>
                              <p class="text-sm text-zinc-400 text-balance">{project.description}</p>
                         </div>
                    </li>
               ))}
          </ul>
     </div>
</InfoLayout>